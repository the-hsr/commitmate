{
  "name": "commitmate",
  "displayName": "CommitMate",
  "version": "0.0.1",
  "publisher": "thehsr",
  "icon": "assets/featureImage.png",
  "description": "An AI-powered VS Code extension that analyzes your staged Git diffs and meaningful. concise commit messages.",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "scripts": {
    "build": "npm install && npm run compile",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "contributes": {
    "commands": [
      {
        "command": "commitmate.generateCommitMessage",
        "title": "Generate Commit Message",
        "category": "CommitMate"
      },
      {
        "command": "commitmate.branchCommitSummary",
        "title": "Glimpse of Branch Commits",
        "category": "CommitMate"
      },
      {
        "command": "commitmate.resetExtension",
        "title": "Reset Extension",
        "category": "CommitMate"
      },
      {
        "command": "commitmate.mergeRequestTemplate",
        "title": "Merge Request Template",
        "category": "CommitMate"
      },
      {
        "command": "commitmate.performCodeReview",
        "title": "Code Review",
        "category": "CommitMate"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commitmate.generateCommitMessage",
          "group": "navigation"
        },
        {
          "command": "commitmate.branchCommitSummary",
          "group": "navigation"
        },
        {
          "command": "commitmate.mergeRequestTemplate",
          "group": "navigation"
        },
        {
          "command": "commitmate.performCodeReview",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "groq-sdk": "^0.30.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.5.0"
  }
}
